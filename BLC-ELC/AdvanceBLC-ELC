package Elc;
import BLC.CustomerData;
public class CustomerInfo {
public static void main(String[] args) {
	CustomerData Remo = new CustomerData();
	Remo.setCustomerData(107,"Sriram");
	Remo.getCustomerInfo();
	
	System.out.println("----");
	
	CustomerData harsh = new CustomerData();
	harsh.setCustomerData(108,"Harshitha");
	harsh.getCustomerInfo();
}
}
