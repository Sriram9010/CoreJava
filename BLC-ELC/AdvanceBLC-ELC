package BLC;
public class ShopDiscount {
    public static double calculateDiscount(double billAmount) {
        double discount;
        if (billAmount >= 5000) {
            discount = 0.20;
        } else if (billAmount >= 3000) {
            discount = 0.15;
        } else if (billAmount >= 1000) {
            discount = 0.10;
        } else {
            discount = 0.05;
        }
        return billAmount - (billAmount * discount);
    }
}
