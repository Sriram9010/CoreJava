package BLC;
public class StudentBlc {
	private String name;
	private int age;
	private String  grade;
	public StudentBlc(String name, int age, String grade) {
		
		this.name = name;
		this.age = age;
		this.grade = grade;
	}
	public static StudentBlc createStudentObject(String name,int age,String grade) {
		StudentBlc s1= new StudentBlc(name,age,grade);
		return s1;
		//return new StudentBlc(name,age,grade);
	}
	
	public String toString() {
		return "StudentBlc [name=" + name + ", age=" + age + ", grade=" + grade + "]";
	}
	
}
