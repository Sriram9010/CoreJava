 public void setCustomerData(int Id, String Name)
 {
	 CsID = Id;
	 CsName = Name;
 }
 public void getCustomerInfo()
 {
	 System.out.println("The Customer ID :"+CsID);
	 System.out.println("The Customer Name is :"+CsName);
 }
}
