package Elc;
import java.util.Scanner;
import BLC.ShopDiscount;
public class ShopCart {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter Customer Name :");
		String name = sc.nextLine();
		
		System.out.println("Enter Total Bill Amount :");
		double bill = Double.parseDouble(sc.nextLine());
		
		double finalAmount = ShopDiscount.calculateDiscount(bill);
		System.out.println("\n------ BILL SUMMARY ------");
        System.out.println("Customer Name: " + name);
        System.out.println("Original Bill: " + bill);
        System.out.println("Amount Payable after Discount: " + finalAmount);
		
        sc.close();
	}    
}
