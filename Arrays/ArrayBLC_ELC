package BLC;

public class StudentArrayDemo {
       private int id;
       private String name;
       private double marks;
       
       public StudentArrayDemo(int id,String name,double marks){
    	       this.id = id;
    	       this.name = name; 
    	       this.marks = marks;
       }

	   @Override
	   public String toString() {
		return "StudentBlc [id=" + id + ", name=" + name + ", marks=" + marks + "]";
	   }
       
}
-----------------------------
package Elc;
import java.util.*;
import BLC.StudentArrayDemo;
public class StudentArrayElcDemo {
    public static void main(String args[]) {
    	StudentArrayDemo[] students = new StudentArrayDemo[3];
    	    
    	    students[0] = new StudentArrayDemo(101,"ram",72);
    	    students[1] = new StudentArrayDemo(102,"srinu",98.5);
    	    students[2] = new StudentArrayDemo(103,"gopi",64);
    	    
    	    for(StudentArrayDemo s : students) 
    	    {
    	    	   System.out.println(s);
    	    }
    }
}
