package BLC;

public class EmployeeArrayblc {
	private int id;
    private String name;
    private double salary;
    
    public EmployeeArrayblc(int id,String name,double salary){
 	       this.id = id;
 	       this.name = name; 
 	       this.salary = salary;
    }

	@Override
	public String toString() {
		return "EmployeeArrayblc [id=" + id + ", name=" + name + ", salary=" + salary + "]";
	}
        
}
--------------------------------------------
package Elc;
import java.util.Scanner;

import BLC.EmployeeArrayblc;
public class EmployeeArrayElc {
    public static void main(String args[]) {
    	 Scanner sc = new Scanner(System.in);
    	 
    	 System.out.println("Enter number of employees: ");
    	 int size = Integer.parseInt(sc.nextLine());
    	 
    	 EmployeeArrayblc e[] = new EmployeeArrayblc[size];
    	   
    	 for(int i=0;i<size;i++) {
    		 System.out.println("Enter ID: ");
    		 int id = Integer.parseInt(sc.nextLine());
    		 
    		 System.out.println("Enter Name: ");
    		 String name = sc.nextLine();
    		 
    		 System.out.println("Enter Salary:");
    		 double salary = Double.parseDouble(sc.nextLine());
    		 
    		 e[i] = new EmployeeArrayblc(id,name,salary);
    	 }
    	 
    	 System.out.println("Enter details for Employee :");
    	 for(EmployeeArrayblc emp : e) 
    	 {
    		 System.out.println(emp);
    	 }
    }
}
